@model DiceVM

@{
    ViewData["Title"] = "Home Page";
}

<form asp-action="Index" method="post">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <input class="radio form-control input" type="radio" asp-for="selectedDie" value="4" id="radio1">
                <label class="form-check-label" for="radio1"><img src="~/images/d4-icon.png" /></label>
            </div>
            <div class="col-md-3">
                <input class="radio form-control input" type="radio" asp-for="selectedDie" value="6" id="radio2">
                <label class="form-check-label" for="radio2"><img src="~/images/d6-icon.png" /></label>
            </div>
            <div class="col-md-3">
                <input class="radio form-control input" type="radio" asp-for="selectedDie" value="8" id="radio3">
                <label class="form-check-label" for="radio3"><img src="~/images/d8-icon.png" /></label>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <input class="form-control input" type="radio" asp-for="selectedDie" value="10" id="radio4">
                <label class="form-check-label" for="radio4"><img src="~/images/d10-icon.png" /></label>
            </div>
            <div class="col-md-3">
                <input class="radio form-control input" type="radio" asp-for="selectedDie" value="12" id="radio5">
                <label class="form-check-label" for="radio5"><img src="~/images/d12-icon.png" /></label>
            </div>
            <div class="col-md-3">
                <input class="radio form-control input" type="radio" asp-for="selectedDie" value="20" id="radio6">
                <label class="form-check-label" for="radio6"><img src="~/images/d20-icon.png" /></label>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-sm-1">
                <input class="btn btn-primary" type="submit" asp-for="amount" value="1">
            </div>
            <div class="col-sm-1">
                <input class="btn btn-primary" type="submit" asp-for="amount" value="2">
            </div>
            <div class="col-sm-1">
                <input class="btn btn-primary" type="submit" asp-for="amount" value="3">
            </div>
            <div class="col-sm-1">
                <input class="btn btn-primary" type="submit" asp-for="amount" value="4">
            </div>
            <div class="col-sm-1">
                <input class="btn btn-primary" type="submit" asp-for="amount" value="5">
            </div>
            <div class="col-sm-1">
                <input class="btn btn-primary" type="submit" asp-for="amount" value="6">
            </div>
            <div class="col-sm-1">
                <input class="btn btn-primary" type="submit" asp-for="amount" value="7">
            </div>
            <div class="col-sm-1">
                <input class="btn btn-primary" type="submit" asp-for="amount" value="8">
            </div>
        </div>
    </div>
</form>

<label asp-for="total">@Model.total</label>